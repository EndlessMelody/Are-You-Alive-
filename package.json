{
  "name": "are-you-alive",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "scripts": {
    "dev:renderer": "vite",
    "dev:electron": "electron .",
    "dev": "npm run build && electron .",
    "start": "electron .",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "package": "npm run build && electron-packager . \"Are You Alive?\" --platform=win32 --arch=x64 --out=dist-package --icon=assets/icon.png --overwrite",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "build": {
    "appId": "com.areyoualive.app",
    "productName": "Are You Alive?",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist",
      "src/main",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "auto-launch": "^5.0.6",
    "better-sqlite3": "^11.6.0",
    "electron-log": "^5.4.3",
    "framer-motion": "^12.26.1",
    "lucide-react": "^0.344.0",
    "nodemailer": "^7.0.12",
    "react": "^18.2.0",
    "react-calendar": "^6.0.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "sentiment": "^5.0.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "vite": "^5.1.4"
  }
}
